  <body>
    <!-- DESKTOP NAV START -->
    <div class="nav-lg">
      <div class="account-container">
        <div class="account-user-container">
          {{#if user}}
            <div class="dropdown">
              <a href="#" data-toggle="dropdown">Hi, {{user.first_name}} <i class="fas fa-caret-down"></i></a>

              <div class="dropdown-menu account-dropdown">
                {{#if user.cart.length}}
                <a class="dropdown-item" href="/cart">Shopping Cart <i class="fas fa-shopping-cart"></i> <span class="badge badge-light">{{user.cart.length}}</span></a>
                {{else}}
                <a class="dropdown-item" href="/cart">Shopping Cart</a>
                {{/if}}

                <a class="dropdown-item" href="/orders">Your Orders</a>

                {{#if user.admin}}
                <a class="dropdown-item" href="/admin">Administration Panel</a>
                {{/if}}

                <a class="dropdown-item" href="/users/logout">Sign out</a>
              </div>
            </div>
          {{else}}
            <p><a href="/users/login">Sign In</a> or <a href="/users/register">Create Account</a></p>
          {{/if}}
        </div>
      </div>

      <!-- LOGO -->
      <a href="/"><img src="/images/logo-large-noelpaseo.png" alt="The Fine Jewelry Bar"></a>

      <ul class="nav justify-content-center">
        <li class="hvr-underline-from-right"><a class="nav-link" href="/sale">SALE</a></li>
        
        <li class="dropdown">
          <a class="nav-link dropdown-toggle hvr-underline-from-right" href="#" data-toggle="dropdown">SHOP</a>

          <div class="dropdown-menu nav-lg-dropdown-menu">
            <a class="dropdown-item nav-lg-dropdown-item" href="/store">Shop Everything</a>
            <a class="dropdown-item nav-lg-dropdown-item" href="/designers">Shop Designers</a>
            <a class="dropdown-item nav-lg-dropdown-item" href="/store/category/bracelet">Shop Bracelets</a>
            <a class="dropdown-item nav-lg-dropdown-item" href="/store/category/earring">Shop Earrings</a>
            <a class="dropdown-item nav-lg-dropdown-item" href="/store/category/necklace">Shop Necklaces</a>
            <a class="dropdown-item nav-lg-dropdown-item" href="/store/category/pendant">Shop Pendants</a>
            <a class="dropdown-item nav-lg-dropdown-item" href="/store/category/ring">Shop Rings</a>
          </div>
        </li>

        <li class="hvr-underline-from-right"><a class="nav-link" href="/designers">DESIGNERS</a></li>

        <li class="hvr-underline-from-right"><a class="nav-link" href="/events">EVENTS</a></li>

        <li class="hvr-underline-from-right"><a class="nav-link" href="/about/contact">CONTACT</a></li>
      </ul>
    </div>
    <!-- DESKTOP NAV END -->

    <!-- MOBILE NAV START -->
    <div class="nav-sm">
      <div class="collapse" id="mobileNavigation">
        <ul>
          {{#if user}}
          <li class="dropdown">
            <a href="#" data-toggle="dropdown">Your Account</a>

            <div class="dropdown-menu nav-sm-account-dropdown">
              {{#if user.cart.length}}
                <a class="dropdown-item nav-sm-account-dropdown-item" href="/cart">Shopping Cart <i class="fas fa-shopping-cart"></i> <span class="badge badge-light">{{user.cart.length}}</span></a>
                {{else}}
                <a class="dropdown-item nav-sm-account-dropdown-item" href="/cart">Shopping Cart</a>
                {{/if}}

              <a class="dropdown-item nav-sm-account-dropdown-item" href="/orders">Orders</a>

              {{#if user.admin}}
              <a class="dropdown-item nav-sm-account-dropdown-item" href="/admin">Administration Panel</a>
              {{/if}}

              <a class="dropdown-item nav-sm-account-dropdown-item" href="/users/logout">Sign out</a>
            </div>
          </li>
          {{else}}
          <li><a href="/users/login">Sign in</a></li>
          <li><a href="/users/register">Create an account</a></li>
          {{/if}}

          <li class="dropdown">
            <a href="#" data-toggle="dropdown">Shop</a>

            <div class="dropdown-menu nav-sm-shop-dropdown">
              <a class="dropdown-item nav-sm-shop-dropdown-item" href="/store/sales">Shop Sales</a>
              <a class="dropdown-item nav-sm-shop-dropdown-item" href="/store">Shop Everything</a>
              <a class="dropdown-item nav-sm-shop-dropdown-item" href="/designers">Shop Designers</a>
              <a class="dropdown-item nav-sm-shop-dropdown-item" href="/store/category/bracelet">Shop Bracelets</a>
              <a class="dropdown-item nav-sm-shop-dropdown-item" href="/store/category/earring">Shop Earrings</a>
              <a class="dropdown-item nav-sm-shop-dropdown-item" href="/store/category/necklace">Shop Necklaces</a>
              <a class="dropdown-item nav-sm-shop-dropdown-item" href="/store/category/pendant">Shop Pendants</a>
              <a class="dropdown-item nav-sm-shop-dropdown-item" href="/store/category/ring">Shop Rings</a>
            </div>
          </li>

          <li><a href="/designers">Designers</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/about/contact">Contact</a></li>
        </ul>
      </div>
      
      <nav class="nav-sm-bar">
        <a href="#" data-toggle="collapse" data-target="#mobileNavigation" aria-controls="mobileNavigation" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fas fa-bars" style="color: white; font-size: 1.5rem; padding-top: 4px; padding-left: 8px;"></i>
        </a>
      </nav>

      <a href="/"><img src="/images/logo-large-noelpaseo.png" alt="The Fine Jewelry Bar"></a>
    </div>
    <!-- MOBILE NAV END -->

    <!-- Flash Messages -->
    <!-- Info Flash -->
    <div class="container" style="max-width: 1440px;">
      {{#if messages.info}}
        <div class="alert alert-info alert-dismissible fade show" role="alert">
          
          {{messages.info}}
          
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      {{/if}}

      <!-- Success Flash -->
      {{#if messages.success}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          
          {{messages.success}}
          
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      {{/if}}

      <!-- Error Flash -->
      {{#if messages.error}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          
          {{messages.error}}
          
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      {{/if}}
    </div>

    {{{body}}}

