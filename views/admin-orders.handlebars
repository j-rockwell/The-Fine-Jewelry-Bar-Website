<div class="container-main">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Transaction ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Status</th>
                <th scope="col">Items</th>
                <th scope="col">Edit</th>
            </tr>
        </thead>

        <tbody>
            {{#each orders}}
            <tr>
                <td>{{this.transaction}}</td>
                <td>{{this.shipping_firstname}}</td>
                <td>{{this.shipping_lastname}}</td>

                <td>
                    {{#if (eq this.status 0)}}
                        <span class="badge badge-primary">Awaiting Approval</span>
                    {{/if}}

                    {{#if (eq this.status 1)}}
                        <span class="badge badge-warning">Awaiting Shipment</span>
                    {{/if}}

                    {{#if (eq this.status 2)}}
                        <span class="badge badge-success">Shipped</span>
                    {{/if}}

                    {{#if (eq this.status 3)}}
                        <span class="badge badge-success">Completed</span>
                    {{/if}}

                    {{#if (eq this.status 4)}}
                        <span class="badge badge-info">Awaiting Special Order</span>
                    {{/if}}
                </td>

                <td>{{this.items.length}}</td>

                <td><a href="/admin/orders/{{this._id}}/edit"><i class="fas fa-ellipsis-h" style="color: #EC257C;"></i></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>